// api/submit-report.js
export default async function handler(request, response) {
  // Ověření, že se jedná o POST požadavek
  if (request.method !== 'POST') {
    return response.status(405).json({ message: 'Method Not Allowed' });
  }

  try {
    const { server, role, train } = request.body;

    // URL Discord webhooku získáme z proměnných prostředí Vercelu
    const DISCORD_WEBHOOK_URL = process.env.DISCORD_WEBHOOK_URL;

    if (!DISCORD_WEBHOOK_URL) {
      console.error("Missing DISCORD_WEBHOOK_URL environment variable.");
      return response.status(500).json({ message: "Server configuration error: Discord Webhook URL is missing." });
    }

    // Vytvoření zprávy pro Discord
    const discordMessage = {
      content: `Nový výkaz SimRail:\nServer: ${server}\nRole: ${role}\nVlak: ${train}`,
      // Zde můžeš přidat další detaily jako username nebo avatar
      // username: "SimRail Výkazy",
      // avatar_url: "URL_K_OBRAZKU_PRO_AVATAR",
      // Můžeš přidat i embeds pro hezčí a strukturovanější zprávy na Discordu:
      // embeds: [
      //   {
      //     title: "Nový výkaz odeslán",
      //     description: "Uživatel odeslal nový výkaz přes webový formulář.",
      //     fields: [
      //       { name: "Server", value: server, inline: true },
      //       { name: "Role", value: role, inline: true },
      //       { name: "Číslo vlaku", value: train, inline: true }
      //     ],
      //     color: 3447003 // Modrá barva (decimal)
      //   }
      // ]
    };

    // Odeslání zprávy na Discord Webhook
    const discordResponse = await fetch(DISCORD_WEBHOOK_URL, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
Add Vercel Function for Discord webhook
      body: JSON.stringify(discordMessage),
    });

    if (discordResponse.ok) {
      response.status(200).json({ message: 'Výkaz úspěšně odeslán a zpráva poslána na Discord!' });
    } else {
      const errorData = await discordResponse.json();
      console.error("Error sending to Discord:", errorData);
      response.status(discordResponse.status).json({ message: `Chyba při odesílání na Discord: ${errorData.message || discordResponse.statusText}` });
    }

  } catch (error) {
    console.error('Error processing form submission:', error);
    response.status(500).json({ message: 'Interní chyba serveru.' });
  }
}
